  <% if @corsair.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@corsair.errors.count, "erreur") %> ont empêché votre profil d'être sauvegardé !
      </h2>
      <ul>
        <% @corsair.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_with model: @corsair, local: true do |form| %>

 <p>
   <%= form.label "Moussaillon, quel est votre prénom ?" %><br>
   <%= form.text_field :first_name %>
 </p>

 <p>
   <%= form.label "Moussaillon, quel âge avez-vous ?" %><br>
   <%= form.text_field :age %>
 </p>
 

 <p> Préférez-vous les Kebab ou le Hummus ? </p>

	<%= radio_button_tag(:likeness, "Hummus") %>
	<%= label_tag(:likeness_hummmus, "Je préfère le Hummus") %>
	<%= radio_button_tag(:likeness, "Kebab") %>
	<%= label_tag(:likeness_kebab, "Je préfère le Kebab") %>

 <p>
   <%= form.submit "Je crée mon profil" %>
 </p>

<% end %>